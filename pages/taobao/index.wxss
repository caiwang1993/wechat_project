.page-container {
  font-size: 32rpx;
  font-family: -apple-system,
                 BlinkMacSystemFont,
                 'Segoe UI',
                 Roboto,
                 Oxygen,
                 Ubuntu,
                 Cantarell,
                 'Open Sans',
                 'Helvetica Neue',
                 sans-serif;
  background: #FBF9FE;
  min-height: 100%;
}

.header {
  width: 100%;
  height: 74rpx;
  background: #fe5400;
  padding: 12rpx 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.header image {
  width: 50rpx;
  height: 54rpx;
  display: block;
}

.header input {
  height: 50rpx;
  width: 88%;
  background: #b52600;
  box-sizing: border-box;
  margin-left: 30rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
}

.header input::placeholder {
  color: #333;
}

.banner {
  width: 100%;
  height: 234rpx;
}

.banner image {
  width: 100%;
  height: 234rpx;
  display: block;
}
.banner swiper{
  width: 100%;
  height: 100%;
}
.banner-2{
  width: 100%;
  height: 224rpx;
}
.menu-list{
  display: flex;
  align-content: center;
  flex-flow: wrap;
  width: 100%;
  background: #ffffff
}
.menu-item {
width: 20%;
text-align: center;
font-size: 24rpx;
margin-bottom: 20rpx;
}
.menu-item  image{
  width: 120rpx;
height: 84rpx;
display: block;
margin: 0 auto;
margin-bottom: 5px;

}