<!--pages/mytaobao/index.wxml-->
<view class="index">
  <view class="header">
    <span>你需要登录才能访问</span>
    <span class="desc">关闭</span>
  </view>
  <view class="main">
    <view class="field">
      <text>账户</text>
      <input placeholder="请输入账号" type="text" bindinput="inputAccount" model:value="{{account}}"></input>
    </view>
    <view class="field">
      <text>登录密码</text>
      <input placeholder="请输入登录密码" type="password" bindinput="inputPassword" model:value="{{password}}"></input>
    </view>
    <button class="login-btn" bindtap="login">{{login_btn}}</button>
    <view class="v-middle" style="padding:10rpx;">
    <view class="reg-btn">
    免费注册
    </view>
    <view class="forget-btn">忘记密码</view>
    </view>
  </view>
</view>