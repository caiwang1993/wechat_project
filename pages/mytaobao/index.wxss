/* pages/mytaobao/index.wxss */
.index{
    background-color: #FBF9FE;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    flex: 1;
    min-height: 100%;
    font-size: 32rpx;
}
.header{
  width: 100%;
  height: 52px;
  line-height: 52px;
  font-size: 32rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  font-weight: bold;
  background: rgb(238, 238, 238);

}
.header .desc{
  margin-left: auto;
  color: #cccccc
}
.main .field{
  width: 100%;
  height: 70rpx;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
  color:#6c6c6c;
}
.main .field text{
  width: 30%
}
.main .field input{
  width: 50%;
  font-size: 32rpx

}

.login-btn{
  margin-top: 50rpx;
  width: 95%!important;
  background:#f40;
  color: #f97
}
.reg-btn{
   color: #f40;
   font-size: 28rpx;
}
.forget-btn{
  margin-left: auto;
   color: #f40;
   font-size: 28rpx;
}